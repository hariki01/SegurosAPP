<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eda.administrador.seguro.MecanicaFragment">

    <TextView
        android:id="@+id/txtMecanica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/mechanical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtUbicacion"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="@string/location" />


        <EditText
            android:id="@+id/edtUbicacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnUbicacion"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ubicacion"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMotivo"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="@string/reason" />

        <Spinner
            android:id="@+id/spiMotivo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/reason" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vehicle" />

            <Spinner
                android:id="@+id/spiVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/reason" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/color" />

            <Spinner
                android:id="@+id/spiColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="@string/reason" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnCamara"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/ic_menu_camera" />

        <ImageView
            android:id="@+id/imgCamara"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="top"
            android:layout_weight="0.62" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comment" />

    <EditText
        android:id="@+id/edtComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <Button
        android:id="@+id/btnGrabar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_layer_button"
        android:text="@string/save"
        android:textColor="@android:color/white" />


</LinearLayout>
